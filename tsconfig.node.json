{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "types": ["node"],
    // bundler
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "vite.config.*",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts"
  ]
}
